<Window x:Class="BitcoinMiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitcoinMiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Bahnschrift" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Media/bg.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Image Source="Media/neon.png" 
               Stretch="Fill"
               Width="600"
               Margin="-70,0,0,0"
               />

        <Image x:Name="ImgBTC" 
               Source="Media/bitcoin.png"
               Grid.Row="1"
               Height="210"
               Margin="30,0,0,0" 
               MouseDown="ImgBTC_MouseDown" 
               MouseUp="ImgBTC_MouseUp" 
               MouseLeave="ImgBTC_MouseLeave">
            <Image.Triggers>
                <EventTrigger RoutedEvent="MouseDown">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="230" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseUp">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="210" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="210" Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>

        <StackPanel Background="#0f127b" Margin="62,14,22,14">
            <Label Name="LblNaam" Content="X's Bitcoin Emperium" 
                   Width="200" Foreground="#00acd1" FontWeight="Bold" FontSize="18"/>
            <WrapPanel>
                <Label Content="BTC: " Width="150" Foreground="#00acd1" FontSize="18"/>
                <Label x:Name="LblBTC" Content="-Aaantal BTC-" Width="150" 
                       Foreground="#00acd1" FontSize="18"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="BTC/s: " Width="150" Foreground="#00acd1" FontSize="18"/>
                <Label x:Name="LblBTCpersec" Content="-Aaantal BTC/s-" Width="150" 
                       Foreground="#00acd1" FontSize="18"/>
            </WrapPanel>
        </StackPanel>




        <Grid Grid.Column="1" Grid.RowSpan="2" Margin="20" Background="#001969">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
                <Label Content="Shop"  
                       Foreground="#00acd1" 
                       FontWeight="Bold" 
                       FontSize="48"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />

                <Border
                    BorderBrush="#008dff"
                    BorderThickness="2"
                    Grid.Row="1"
                    >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>

                            <Image 
                                Source="Media/worker.png"
                                Height="50"
                                Grid.Column="0"/>
                        <StackPanel 
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <Label 
                                Content="Investment 1" 
                                Foreground="#00acd1" 
                                FontSize="18"/>
                            <Label 
                                Content="Price Investment 1" 
                                Foreground="#00acd1" 
                                FontSize="18"/>
                        </StackPanel>
                        <Label 
                            Content="100" 
                            Foreground="#00acd1" 
                            FontSize="18" 
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border
                    BorderBrush="#008dff"
                    BorderThickness="2"
                    Grid.Row="2">
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Media/worker.png"
                           Height="50"
                           Grid.Column="0"/>
                        <StackPanel 
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <Label Content="Investment 1" Foreground="#00acd1" FontSize="18"/>
                            <Label Content="Price Investment 1" Foreground="#00acd1" FontSize="18"/>
                        </StackPanel>
                        <Label 
                            Content="100" 
                            Foreground="#00acd1" 
                            FontSize="18" 
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                    </Grid>
                </Border>

                <Border
                    BorderBrush="#008dff"
                    BorderThickness="2"
                    Grid.Row="3">
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Media/worker.png"
                           Height="50"
                           Grid.Column="0"/>
                        <StackPanel 
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <Label Content="Investment 1" Foreground="#00acd1" FontSize="18"/>
                            <Label Content="Price Investment 1" Foreground="#00acd1" FontSize="18"/>
                        </StackPanel>
                        <Label Content="0" 
                               Foreground="#00acd1" 
                               FontSize="18" 
                               Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border
                    BorderBrush="#008dff"
                    BorderThickness="2"
                    Grid.Row="4">
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="Media/worker.png"
                           Height="50"
                           Grid.Column="0"/>
                        <StackPanel
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <Label Content="Investment 1" Foreground="#00acd1" FontSize="18"/>
                            <Label Content="Price Investment 1" Foreground="#00acd1" FontSize="18"/>
                        </StackPanel>
                        <Label Content="0" 
                               Foreground="#00acd1" 
                               FontSize="18"
                               Grid.Column="2"
                               VerticalAlignment="Center"
                               HorizontalContentAlignment="Center"/>
                    </Grid>
                </Border>

        </Grid>
    </Grid>
</Window>
