<Window x:Class="BitcoinMiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitcoinMiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Image x:Name="ImgBTC" 
               Source="Media/bitcoin.png"
               Grid.Row="1"
               Width="250"/>

        <StackPanel>
            <Label Name="LblNaam" Content="X's Bitcoin Emperium" Width="200"/>
            <WrapPanel>
                <Label Content="BTC: " Width="150"/>
                <TextBox x:Name="TxtBTC" Text="-Aaantal BTC-" Width="150"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="BTC/s: " Width="150"/>
                <TextBox x:Name="TxtBTCpersec" Text="-Aaantal BTC/s-" Width="150"/>
            </WrapPanel>


        </StackPanel>

    </Grid>
</Window>
